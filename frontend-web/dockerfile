# Web Next.js
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code (will be overridden by volume in dev)
COPY . .

# Build for production (will be skipped if using dev mode)
RUN npm run build || true

EXPOSE 3000

# Use dev mode for hot reload, change to "npm start" for production
CMD ["npm", "run", "dev"]
